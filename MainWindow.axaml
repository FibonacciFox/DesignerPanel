<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DesignerPanel.MainWindow"
        Width="800" Height="600"
        Title="DesignerPanel">
    <DockPanel>
        <StackPanel Name="PropertyLayer"  Width="200" DockPanel.Dock="Left">
            
        </StackPanel>
        <Panel ClipToBounds="True"  >
            <Panel  Name="DesignPanel" Background="SlateGray">
                <Panel  Name="MyPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Coral">
                    <StackPanel  Spacing="5" Width="300" Height="200" Orientation="Horizontal" Background="Chocolate" Name="MyStackPanel">
                        <Button  Name="MyButton">MyButton</Button>
                        <TextBox VerticalAlignment="Center" Name="MyTextBox"> My Text Box</TextBox>
                    </StackPanel>
                </Panel>
            </Panel>
            <Canvas Name="AdornerPanel"/>
        </Panel>
    </DockPanel>
   
</Window>
