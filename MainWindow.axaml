<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DesignerPanel.MainWindow"
        Width="800" Height="600"
        Title="DesignerPanel">
    <Panel>
        <Panel Name="DesignPanel">
            <StackPanel Name="MyStackPanel" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="300" Width="300" Background="Coral">
                <TextBox Name="MyTextBox">Hello</TextBox>
                <Button Name="MyTextButton" VerticalAlignment="Center">Hello</Button>
                <TextBox Name="MyTextBox2" VerticalAlignment="Center">>Hello</TextBox>
                <NumericUpDown Value="10" />
            </StackPanel>
        </Panel>
        <Canvas Name="AdornerPanel"/>
    </Panel>
   
</Window>
